generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Aluno {
  id        String @id @default(uuid())
  name      String
  create_at DateTime

  @@map("alunos")
}